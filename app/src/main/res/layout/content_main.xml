<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_height"
        android:orientation="vertical"
        tools:ignore="RtlCompat"
        android:id="@+id/linearLayout">

        <EditText android:id="@+id/name1"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:hint="@string/enter_name"
            android:layout_weight="0.05" />

        <EditText android:id="@+id/phone1"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:hint="@string/enter_phone"
            android:layout_weight="0.05" />

        <EditText android:id="@+id/bio1"
            android:layout_width="355dp"
            android:layout_height="129dp"
            android:inputType="textMultiLine"
            android:lines="5"
            android:hint="@string/enter_bio"
            android:textSize="20dp" />


        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="uploadPic"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/uploadicon"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="submit"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/submiticon"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

</RelativeLayout>
